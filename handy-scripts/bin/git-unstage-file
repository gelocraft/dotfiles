#!/bin/sh

workspace=$(git rev-parse --show-toplevel 2> /dev/null)
[ -z "$workspace" ] && exit 0

CYAN='\033[0;36m'
GREEN='\033[1;32m'
RED='\033[0;91m'
fuzzy_preview() {
  fzf -e \
    --header "$(printf "${CYAN}Select File")" \
    --header-first \
    --border=rounded \
    --border-label "$(printf " ${RED}Unstage File ")" \
    --margin 15%,15% \
    --pointer "" \
    --prompt "  "
}

commit_count=$(git rev-list --count --all)

if [ -n "$1" ]; then
    [ $commit_count -eq 0 ] \
        && git rm --cached -r "$1" \
        || git restore --stage -r "$1"
    exit 0
fi

staged_files=$(git diff --name-only --cached)
[ -z "$staged_files" ] && echo "No staged files, nothing to unstage" && exit 0

selected=$(printf "${GREEN}${staged_files}" | tr ' ' '\n' | fuzzy_preview)
if [ -n "$selected" ]; then
    [ $commit_count -eq 0 ] \
        && git rm --cached -r "$workspace/$selected" \
        || git restore --stage -r "$workspace/$selected"
    exit 0
fi
