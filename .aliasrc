# navigation aliases
alias \
  ..="cd .." \
  ...="cd ../.." \
  ....="cd ../../.." \
  .....="cd ../../../.." \

# tmux aliases
alias \
  tls="tmux ls" \
  tks="tmux kill-server" \
  ta="tmux a" \
  tns="tmux new -s" \
  trn="tmux rename-session -t" \

# handy scripts
alias \
  frm="fast-remove" \
  lg="live-grep" \
  drt="dirty" \
  gs="git-status" \
  ga="git-add" \
  gu="git-unstage-file" \
  gco="git-checkout" \
  guc="git-unpushed-commits" \

# version control aliases
alias \
  glo="git log --oneline" \
  gb="git branch" \
  gcm="git commit -m" \
  gp="git push" \
  gdf="git diff" \

# additional aliases
alias \
  size-of="du -sh" \
  size-all="du -hc" \
  ls='exa --no-user --no-time --no-filesize -l' \
  lsn='command ls --color=always' \
  v='nvim' \
  vi='nvim' \
  vii='nvim' \
  iv='nvim' \
  ivi='nvim' \
  ivii='nvim' \
  dev="cd ~/.development" \
  dotfiles="cd ~/.dotfiles" \
  config="cd ~/.dotfiles/.config" \
  python='python3' \
  mem="neofetch memory" \
  cpu="neofetch cpu" \
  disk="neofetch disk" \
  uptime="neofetch uptime" \
  mysql-run="mysql -v --table" \
  mysql-start="sudo systemctl start mysqld.service" \
  mysql-stop="sudo systemctl stop mysqld.service" \
  mysql-status="systemctl status mysqld.service" \
  redis-start="sudo systemctl start redis.service" \
  redis-stop="sudo systemctl stop redis.service" \
  redis-status="systemctl status redis.service" \
  mongo-start="sudo systemctl start mongod.service" \
  mongo-stop="sudo systemctl stop mongod.service" \
  mongo-status="systemctl status mongod.service" \
  ndoe="node" \

# personal aliases
alias \
  celluloid="flatpak run io.github.celluloid_player.Celluloid" \
  obs="flatpak run com.obsproject.Studio" \
  suspend="systemctl suspend" \
  restart="systemctl reboot" \
  sb="setbg" \
