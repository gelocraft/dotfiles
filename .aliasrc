# navigation aliases
alias \
  ..="cd .." \
  ...="cd ../.." \
  ....="cd ../../.." \
  .....="cd ../../../.." \

# tmux aliases
alias \
  tls="tmux ls" \
  tks="tmux kill-server" \
  tds="tmux-db-session" \
  ta="tmux a" \
  td="tmux detach" \
  tx="tmux-sessionizer" \
  tns="tmux new -s" \
  trn="tmux rename-session -t" \

# handy scripts
alias \
  ew="edit-tmux-workspace" \
  mp="monitor-process" \
  vr="vim-recent" \
  ff="find-files" \
  fvi="find-files" \
  frm="fast-remove" \
  lg="live-grep" \
  drt="dirty" \
  gs="git-status" \
  gf="git-files" \
  ga="git-add" \
  gu="git-unstage-file" \
  gr="git-restore" \
  gco="git-checkout" \
  guc="git-unpushed-commits" \
  guf="git-untracked-files" \
  gmf="git-modified-files" \
  grd="git-restore-deleted" \
  grm="git-restore-modified" \
  gsa="git-stash-apply" \
  gulc="git-undo-last-commit" \
  gai="git-add-interactive" \
  grl="git-reflog" \
  gw="tmux-switch-worktree" \
  cw="git-create-worktree" \
  rw="git-remove-worktree" \
  glf="git-log-file" \
  sws="switch_shell" \

# version control aliases
alias \
  glo="git log --oneline --color=always" \
  gb="git branch" \
  gcm="git commit -m" \
  gp="git push" \
  gpf="git push -f" \
  gdf="git diff" \
  gsu="git stash -u" \
  gsp="git stash pop" \
  gsc="git stash clear" \
  gsl="git stash list" \
  gss="git stash show" \
  gca="git commit --amend" \
  gcan="git commit --amend --no-edit" \
  gdt="git difftool -y" \
  gwa="git worktree add" \
  gcob="git checkout -b" \

# additional aliases
alias \
  e="$EDITOR" \
  cr="cargo run" \
  rsc="rustc" \
  ls='exa --no-user --no-time --no-filesize --group-directories-first' \
  lsn='command ls --color=always' \
  sv='source ./venv/bin/activate' \
  cv='python3 -m venv venv' \
  nn='nano' \
  v='nvim' \
  vi='nvim' \
  vii='nvim' \
  iv='nvim' \
  ivi='nvim' \
  ivii='nvim' \
  dbui='nvim -c DBUIToggle' \
  tree='tree --gitignore' \
  dev="cd ~/.development" \
  dotfiles="cd ~/.dotfiles" \
  python='python3' \
  mem="neofetch memory" \
  cpu="neofetch cpu --cpu_temp" \
  disk="neofetch disk" \
  uptime="neofetch uptime" \
  ndoe="node" \

# personal aliases
alias \
  ncp="nvim-cp" \
  nwk="nvim-work" \
  suspend="systemctl suspend" \
  restart="systemctl reboot" \
  i3lock="i3lock -c 1A212E" \
  reckey="screenkey -s small -t 0.25 --opacity 0.5 -p fixed -g 24%x7%-2%-10% &" \
  sb="setbg" \
